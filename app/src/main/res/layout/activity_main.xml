<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAA75D"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/waqt">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/loc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7E1515"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"/>

        <TextView

            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7E1515"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <TextView
            android:id="@+id/Fajr_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:text="@string/fajr"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView

            android:id="@+id/Fajr_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <TextView
            android:text="@string/Dhuhr"
            android:id="@+id/Dhuhr_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/Dhuhr_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <TextView
            android:text="@string/Asr"
            android:id="@+id/Asr_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />


            <TextView

            android:id="@+id/Asr_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">
        <TextView
            android:text="@string/Magrib"
            android:id="@+id/Magrib_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/Magrib_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <TextView
            android:text="@string/Esha"
            android:id="@+id/Esha_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Esha_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#7E1515"
            android:textSize="20sp"
            android:textStyle="bold" />

        </LinearLayout>


</LinearLayout>